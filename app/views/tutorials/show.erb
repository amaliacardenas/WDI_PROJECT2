<h2><%= @tutorial.title %></h2>

<p><%= @tutorial.title %></p>
<p><%= @tutorial.URL %></p>
<p><%= @tutorial.author %></p>
<p><%= @tutorial.description %></p>
<p><%= @tutorial.difficulty %></p>
<p><%= @tutorial.vote %></p>
<form method="get" action='/tutorials/<%= @tutorial.id %>/edit'>
