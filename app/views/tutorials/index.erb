<section class="second-header">
  <br>
  <br>
  <br>
  <h2>Search All Tutorials</h2>
  <form id="search-form" class="form-inline" action="/tutorials">
    <input type="text" name="search" placeholder="Search" value="<%= params[:search] %>" class="form-control">
    <button class="btn btn-default">Go</button>
  </form>
</section>
<div class="container">
  <div class="row">
    <% @tutorials.each_with_index do |tutorial, index| %>
    
    <% index += 1 %>
    <% puts index %>
    <div class="col-sm-4">
      <div class="thumbnail">
        <div class="top-bar">
          <p>Total votes: <%= tutorial.votes %></p>
          <%#= pluralize tutorial.votes, "vote" %>
          <% if current_user && current_user.can_vote_for?(tutorial) %>
          <a href="/tutorials/<%= tutorial.id %>/vote?value=1" class="vote-up-down">Vote up</a>
          <a href="/tutorials/<%= tutorial.id %>/vote?value=-1"class="vote-up-down" >Vote down</a>
          <% end %> 
        </div>
        <a href="/tutorials/<%= tutorial.id %>">
          <h4 class="caption"><%= tutorial.title %></h4>
        </a>
        <%= tutorial.author %>
        <%= tutorial.description %>
        <%= tutorial.difficulty %>
      </div>
    </div>
    <% if index%3 == 0 && index > 1%>
  </div>
  <div class="row">
    <% end %>
    <% end %>
  </div>
</div>

