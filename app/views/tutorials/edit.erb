<h2>Edit Profile</h2>
<form id="register" method="post" action="/tutorials/<%= @tutorial.id %>">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label for="title">Title of Tutorial</label>
    <input name="tutorial[title]" type="text" class="form-control" id="title" placeholder="Title of Tutorial" value="<%= @tutorial.title %>">
  </div>
  <div class="form-group">
    <label for="URL">URL of tutorial</label>
    <input name="tutorial[URL]" type="text" class="form-control" id="URL" placeholder="URL" value="<%= @tutorial.URL %>">
  </div>
  <div class="form-group">
    <label for="author">Author of Tutorial</label>
    <input name="tutorial[author]" type="text" class="form-control" id="author" placeholder="Author" value="<%= @tutorial.author %>">
  </div>
  <div class="form-group">
    <label for="description">What do you like about this tutorial?</label>
    <input name="tutorial[description]" type="text" class="form-control" id="description" placeholder="Description" value="<%= @tutorial.description %>">
  </div>
  <div class="form-group">
    <label for="difficulty">Who is this tutorial for?</label>
    <input name="tutorial[difficulty]" type="text" class="form-control" id="difficulty" placeholder="Difficulty" value="<%= @tutorial.difficulty %>">
  </div>
  <div class="form-group">
    <label for="vote">Vote</label>
    <input name="tutorial[vote]" type="number" class="form-control" id="vote" placeholder="Vote">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
