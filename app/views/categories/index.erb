<h2>All Categories</h2>
<form id="search-form" class="form-inline" action="/tutorials">
 <input type="text" name="search" placeholder="Search" value="<%= params[:search] %>" class="form-control">
 <button class="btn btn-default">Go</button>
</form>

<video autoplay loop poster="/images/hands.jpg" id="bgvid">
   <source src="/videos/hands-typing.webm" type="video/webm">
   <source src="/videos/hands-typing.mp4" type="video/mp4">
</video>

<ul class="media-list">
  <% @categories.each do |category| %>
    <li class="media">
      <div class="media-body">
        <a href="/categories/<%= category.id %>">
          <h4 class="media-heading"><%= category.title %></h4>
        </a>
        <img src="<%= category.icon %>">
        
      </div>
    </li>
  <% end %>
</ul>