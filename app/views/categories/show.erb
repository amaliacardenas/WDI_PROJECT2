
<div>
  <h1><%= @category.title %></h1>


  <% @category.tutorials.each_with_index do |tutorial, index|%>
    <% index += 1 %>
    <% puts index %>
    <div class="col-sm-4">
      <div class="thumbnail">
        <div class="top-bar">
          <p>Number of votes: <%= tutorial.votes %></p>
          <%#= pluralize tutorial.votes, "vote" %>
          <% if current_user && current_user.can_vote_for?(tutorial) %>
          <a href="/tutorials/<%= tutorial.id %>/vote?value=1">up</a>
          <a href="/tutorials/<%= tutorial.id %>/vote?value=-1">down</a>
          <% end %> 
        </div>
        <a href="/tutorials/<%= tutorial.id %>">
          <h4 class="caption"><%= tutorial.title %></h4>
        </a>
        <%= tutorial.author %>
        <%= tutorial.description %>
      </div>
    </div>
    <% if index%3 == 0 && index > 1%>
  </div>
  <div class="row">
    <% end %>
  <% end %>

</div>


